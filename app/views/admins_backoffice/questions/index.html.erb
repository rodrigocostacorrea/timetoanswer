<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t('messages.listing', model: @questions.model_name.human(count: 2)) %></h1>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>#</th>
      <th><%= translate_attribute(@questions, :description) %></th>
      <th><%= translate_attribute(@questions, :subject) %></th>
      <th>
        <%= link_to new_admins_backoffice_question_path, class: "btn btn-success btn-circle" do %>
          <i class="fa fa-plus fa-fw"></i>
        <% end %>
      </th>
    </tr>
    </thead>
    <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.description.truncate(50) %></td>
        <td><%= question.subject.description %></td>
        <td style="width: 82px">
          <%= link_to edit_admins_backoffice_question_path(question), class: "btn btn-warning btn-circle" do %>
            <i class="fa fa-edit fa-fw"></i>
          <% end %>
          <%= link_to admins_backoffice_question_path(question), method: :delete, class: "btn btn-danger btn-circle", data: {confirm: t('messages.confirm_with', item: question.description.truncate(30)) } do %>
            <i class="fa fa-minus fa-fw"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= page_entries_info @questions %>
  </div>
  <div class="text-center">
    <%= paginate @questions %>
  </div>
</div>